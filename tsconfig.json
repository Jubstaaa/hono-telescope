{
  "files": [],
  "references": [
    { "path": "apps/core" },
    { "path": "apps/dashboard" },
    { "path": "apps/example" },
    { "path": "packages/types" }
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@hono-telescope/types": ["packages/types/index.ts"]
    }
  }
}
