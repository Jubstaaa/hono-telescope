{
  "git": {
    "requireCleanWorkingDir": true,
    "requireBranch": "main",
    "requireUpstream": true,
    "commitMessage": "chore(release): ${version}",
    "tagName": "${version}",
    "tagAnnotation": "Release ${version}"
  },
  "npm": {
    "publish": true,
    "tag": "latest"
  },
  "github": {
    "release": true,
    "releaseName": "Release v%s"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "âœ¨ Features"
          },
          {
            "type": "fix",
            "section": "ğŸ› Bug Fixes"
          },
          {
            "type": "perf",
            "section": "âš¡ Performance Improvements"
          },
          {
            "type": "refactor",
            "section": "â™»ï¸ Refactoring"
          },
          {
            "type": "style",
            "section": "ğŸ’ Styling"
          },
          {
            "type": "docs",
            "section": "ğŸ“š Documentation"
          },
          {
            "type": "test",
            "section": "âœ… Tests"
          },
          {
            "type": "chore",
            "section": "ğŸ”§ Chore",
            "hidden": true
          },
          {
            "type": "build",
            "section": "ğŸ—ï¸ Build"
          },
          {
            "type": "ci",
            "section": "ğŸ¤– CI",
            "hidden": true
          }
        ],
        "preMajor": true
      }
    }
  },
  "hooks": {
    "before:init": "bun run lint:fix && bun run build && bun run format",
    "after:release": "echo 'Release ${version} published successfully! ğŸ‰'"
  }
}
