{
  "name": "hono-telescope",
  "version": "0.1.2-beta.1",
  "description": "A powerful debugging and monitoring tool for Hono applications, inspired by Laravel Telescope",
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build && mkdir -p dist && cp -r apps/core/dist/* dist/",
    "dev": "turbo run dev",
    "dev:example": "turbo run dev --filter=@hono-telescope/example",
    "dev:dashboard": "turbo run dev --filter=@hono-telescope/dashboard",
    "test": "turbo run test",
    "clean": "turbo clean && rm -rf node_modules dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "hono",
    "debugging",
    "monitoring",
    "telescope",
    "middleware",
    "observability",
    "performance",
    "typescript",
    "bun",
    "nodejs"
  ],
  "author": {
    "name": "İlker Balcılar",
    "email": "ilkerbalcilartr@gmail.com"
  },
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jubstaaa/hono-telescope.git"
  },
  "bugs": {
    "url": "https://github.com/jubstaaa/hono-telescope/issues"
  },
  "homepage": "https://github.com/jubstaaa/hono-telescope#readme",
  "devDependencies": {
    "turbo": "latest",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "hono": ">=3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}